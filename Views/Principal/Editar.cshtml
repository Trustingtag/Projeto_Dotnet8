@model IEnumerable<Projeto_Dotnet8.Models.ComputadorModels>
@{
    ViewData["Title"] = "Editar Solicitações";
}

<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/editar.css" />

    @* @section Scripts {
        <script src="~/js/listar.js"></script>
    } *@


</head>


<body>

    <partial name="_Header" />

    <div class="titulo">
        <h1>Editar Solicitações</h1>
    </div>

    <section class="container">

        <ul class="computers-list">
            @if (Model != null && Model.Any())
            {
                foreach (ComputadorModels computador in Model)
                {
        
                     <li>
                        <div class="computer-header">
                            <span>
                                <span class="status-circle status-ok"></span>
                                <p><b>ID:</b> @computador.ID <br> <b>Nome:</b> @computador.Nome</p>
                            </span>
                            <button class="dropdown-btn" onclick="toggleDropdown(this)">Detalhes</button>
                        </div>
                        <div class="dropdown-box" style="display:none;">
                            <textarea placeholder="Digite sua mensagem..."></textarea>
                        </div>
                    </li> 

                }
            }
        </ul>

        <a asp-controller="Principal" asp-action="Deletar" id="editar">Voltar</a>
    </section>
</body>