@model Projeto_Dotnet8.Models.ViewModel.CriarMensagem
@{
    ViewData["Title"] = "Criar Solicitação";
}

<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/criar.css" />

</head>

<partial name="_Header" />


<body>

    <div class="titulo">
        <h1>Criar Solicitação</h1>
    </div>

    <section class="container">

        <form asp-action="Criar" method="post">
            <label for="sala">Selecione a sala:</label>
            <select asp-for="SalaId" asp-items="@(new SelectList(Model.Salas, "ID", "Sala_Num"))" id="sala" name="SalaId" required>
                <option value="">Escolha uma sala</option>
            </select>
            <button type="submit" name="carregar" value="true" formnovalidate>Carregar Computadores</button>

            <label for="computador">Selecione o computador:</label>
            <select asp-for="ComputadorId" asp-items="@(new SelectList(Model.Computadores, "ID", "Nome"))" id="computador" name="ComputadorId" required>
                <option value="">Escolha um computador</option>
            </select>

            <label for="mensagem">Mensagem:</label>
            <textarea asp-for="Mensagem" id="mensagem" name="Mensagem" rows="5" cols="30" required></textarea>

            <button type="submit">Enviar</button>
        </form>
    </section>    </section>
</body>

</html>